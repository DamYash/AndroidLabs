<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <ListView
            android:id="@+id/theListView"
            android:layout_width="300dp"
            android:layout_height="fill_parent"
            android:layout_above="@id/send_button"
            tools:listitem="@layout/message" />

    <FrameLayout
        android:id="@+id/fragmentLocation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_toRightOf="@+id/theListView" />

        <Button
            android:id="@+id/send_button"
            android:text="@string/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/theListView"
            android:layout_alignParentBottom="true"/>

        <EditText
            android:id="@+id/EditText"
            android:layout_width="225dp"
            android:hint="@string/EditText"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/receive_button"
            android:layout_toEndOf="@+id/send_button"/>

        <Button
            android:id="@+id/receive_button"
            android:text="@string/receive_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/theListView"
            android:layout_alignParentBottom="true" />


</RelativeLayout>
